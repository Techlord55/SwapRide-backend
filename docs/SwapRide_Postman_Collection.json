            "url": "{{baseUrl}}/users/me",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"firstName\": \"John\",\n  \"lastName\": \"Doe\",\n  \"bio\": \"Car enthusiast and dealer\"\n}"
            }
          }
