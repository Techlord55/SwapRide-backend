            }
          }
        },
        {
          "name": "Get User Reviews",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/reviews/user/:userId"
          }
        }
      ]
    },
    {
      "name": "Reports",
      "item": [
        {
          "name": "Submit Report",
          "request": {
            "method": "POST",
            "header": [{"key": "Content-Type", "value": "application/json"}],
            "url": "{{baseUrl}}/reports",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"reportedEntity\": {\n    \"entityType\": \"vehicle\",\n    \"entityId\": \"vehicle-id-here\"\n  },\n  \"reportType\": \"fake_listing\",\n  \"description\": \"This listing appears to be fake with stock photos\"\n}"
            }
          }
