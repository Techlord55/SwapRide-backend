# Environment Configuration for SwapRide Backend
# Copy this to .env and fill in your values

# Server
NODE_ENV=development
PORT=5000
API_URL=http://localhost:5000
CLIENT_URL=http://localhost:3000

# ========================================
# NEON DATABASE (PostgreSQL)
# ========================================
# Get these from: https://console.neon.tech
# Format: postgresql://user:password@host/database?sslmode=require

# Main connection URL (pooled - for application use)
DATABASE_URL="postgresql://user:password@ep-xx-pooler.region.neon.tech/swapride?sslmode=require"

# Direct connection URL (non-pooled - for migrations)
DIRECT_URL="postgresql://user:password@ep-xx.region.neon.tech/swapride?sslmode=require"

# ========================================
# JWT Configuration
# ========================================
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRE=7d
JWT_COOKIE_EXPIRE=7

# Refresh Token (optional - will use JWT_SECRET if not set)
JWT_REFRESH_SECRET=your-refresh-token-secret-change-this-in-production
JWT_REFRESH_EXPIRE=30d

# ========================================
# Redis (Optional - for caching)
# ========================================
REDIS_URL=redis://localhost:6379

# ========================================
# Clerk Authentication (Optional)
# ========================================
CLERK_PUBLISHABLE_KEY=pk_test_xxx
CLERK_SECRET_KEY=sk_test_xxx
CLERK_WEBHOOK_SECRET=whsec_xxx

# ========================================
# Cloudinary (Image Upload)
# ========================================
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# ========================================
# Firebase (Optional - Push Notifications)
# ========================================
FIREBASE_PROJECT_ID=your_project_id
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYour_Private_Key_Here\n-----END PRIVATE KEY-----\n"
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxx@your-project.iam.gserviceaccount.com
FIREBASE_STORAGE_BUCKET=your-project.appspot.com

# ========================================
# Kora Payment Gateway
# ========================================
KORA_PUBLIC_KEY=pk_test_xxx
KORA_SECRET_KEY=sk_test_xxx
KORA_ENCRYPTION_KEY=your_encryption_key
KORA_WEBHOOK_SECRET=your_webhook_secret
KORA_API_URL=https://api.korapay.com/merchant/api/v1

# ========================================
# Email (SMTP)
# ========================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=noreply@swapride.com

# ========================================
# SMS Provider (Choose one)
# ========================================
# Twilio
TWILIO_ACCOUNT_SID=your_account_sid
TWILIO_AUTH_TOKEN=your_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# Africa's Talking
AT_API_KEY=your_api_key
AT_USERNAME=your_username
AT_SENDER_ID=SwapRide

# Vonage (Nexmo)
VONAGE_API_KEY=your_api_key
VONAGE_API_SECRET=your_api_secret
VONAGE_SENDER_ID=SwapRide

SMS_API_KEY=your_sms_api_key
SMS_SENDER_ID=SwapRide

# ========================================
# Security & Rate Limiting
# ========================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
SESSION_SECRET=your-session-secret-change-this

# ========================================
# Feature Flags
# ========================================
ENABLE_AI_PRICING=false
ENABLE_ESCROW=false
ENABLE_ID_VERIFICATION=false
ENABLE_VIN_VALIDATION=false
